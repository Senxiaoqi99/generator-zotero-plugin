{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "declaration": true,
    "importHelpers": true,
    "target": "es2017",
    "disableSizeLimit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "downlevelIteration": true,
    "lib": [ "es2017" ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "app",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "typings",
    "generator-temp/**/*.ts"
  ]
}
